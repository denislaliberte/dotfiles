[user]
  name = Denis Laliberte
  email = denis.laliberte@gmail.com
[color]
  ui = true
[core]
  autocrlf = false
  editor = vim
  filemode = false
	commitGraph = true
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[git-up "fetch"]
  all = true
[diff]
  tool = kdiff3
	algorithm = patience
[merge]
  tool = kdiff3
[difftool]
  prompt = false
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[push]
  default = matching
[difftool "kdiff3"]
  path = /usr/local/bin/kdiff3
  trustExitCode = false
[commit]
  template = ~/.gitmessage
[rebase]
	autosquash = true
[alias]
	context = blame
	ctx = blame
[protocol]
	version = 2
[gc]
	writeCommitGraph = true
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[credential]
	helper = 
	helper = store --file /opt/dev/var/private/git_credential_store
[pull]
	rebase = false
